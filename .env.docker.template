# Docker Environment Variables Template
# 1. Copy this file: cp .env.docker.template .env.docker
# 2. Replace ALL placeholder values with your actual credentials
# 3. Set a secure password for POSTGRES_PASSWORD

# Database Configuration
POSTGRES_PASSWORD=YOUR_SECURE_PASSWORD_HERE
DB_TYPE=postgres
NODE_ENV=production
DATABASE_URL=postgresql://postgres:YOUR_SECURE_PASSWORD_HERE@postgres:5432/social_media_calendar?sslmode=disable

# Application Configuration
JWT_SECRET=YOUR_JWT_SECRET_HERE
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:3003,http://localhost:3004

# API Keys
OPENAI_API_KEY=YOUR_OPENAI_API_KEY_HERE

# Slack Configuration
SLACK_BOT_TOKEN=YOUR_SLACK_BOT_TOKEN_HERE
SLACK_SIGNING_SECRET=YOUR_SLACK_SIGNING_SECRET_HERE
SLACK_WEBHOOK_URL=YOUR_SLACK_WEBHOOK_URL_HERE
