{
  "name": "social-media-content-calendar",
  "version": "1.0.0",
  "description": "A social media content calendar application",
  "main": "index.js",
  "scripts": {
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && cross-env NODE_ENV=development ts-node-dev -r dotenv/config --files --respawn --transpile-only index.ts",
    "client": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rm -rf node_modules package-lock.json dist build .next .cache && npm install",
    "fresh-start": "npm run clean && npm start",
    "postinstall": "npm install --prefix client && npm install --prefix server"
  },
  "keywords": [
    "social media",
    "content calendar",
    "scheduling"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "formidable": "^3.5.1",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.5",
    "openai": "^4.20.1",
    "pg": "^8.11.3",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/formidable": "^3.4.5",
    "@types/node": "^20.10.4",
    "@types/react-helmet": "^6.1.10",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3",
    "vite": "^6.3.5"
  }
}
