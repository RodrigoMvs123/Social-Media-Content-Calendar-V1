{
  "name": "social-media-content-calendar",
  "version": "1.0.0",
  "description": "A modern web application for planning and scheduling social media content across multiple platforms",
  "main": "index.js",
  "scripts": {
    "predev": "cd client && npm install",
    "dev:frontend": "cd client && npm run dev",
    "dev:backend": "cd server && ts-node-dev --respawn --transpile-only index.ts",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "build:frontend": "cd client && npm run build",
    "build:backend": "cd server && tsc",
    "build": "npm run build:frontend && npm run build:backend",
    "start": "cd server && node dist/index.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "social-media",
    "content-calendar",
    "react",
    "typescript",
    "oauth"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "autoprefixer": "^10.4.21",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "node-cache": "^5.1.2",
    "node-fetch": "^2.6.7",
    "openai": "^3.3.0",
    "pg": "^8.16.0",
    "postcss": "^8.5.3",
    "sqlite": "^4.2.0",
    "sqlite3": "^5.1.6",
    "tailwindcss": "^4.1.7"
  }
}
